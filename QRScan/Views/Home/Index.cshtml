@{
    ViewBag.Title = "Home Page";
    Layout = null;
}

@model IEnumerable<QRScan.Models.CardModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Multiple Cards</title>
    <link rel="stylesheet" href="~/Content/card/card.css">
    <style>
        .card {
            transition: transform 1s linear;
        }
    </style>
</head>
<body>
    <div class="cards-container">
        @foreach (var card in Model)
        {
            <div class="card-item">
                @Html.Partial("CardView", card)
            </div>
        }
    </div>

