@{
    ViewBag.Title = "Home Page";
}

<div>
    @using (Html.BeginForm("GenerateQRFromDatabase", "Home", FormMethod.Post))
    {
        <button type="submit">Generate QR Code</button>
    }

    @if (!string.IsNullOrEmpty(ViewBag.QRCodeImageUrl))
    {
        <div>
            <h3>Your QR Code:</h3>
            <img src="@ViewBag.QRCodeImageUrl" alt="QR Code" />
        </div>
    }

    @if (!string.IsNullOrEmpty(ViewBag.PersonalInfo))
    {
        <div>
            <h3>Your Personal Info:</h3>
            <p>@Html.Raw(ViewBag.PersonalInfo)</p>
        </div>
    }
</div>
